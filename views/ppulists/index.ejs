<% layout("ppulayouts/ppuboilerplate") %>




    <h1>PPU Team Work</h1>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for (let ppulist of allPpulists) { %>
            <a href="/ppulists/<%= ppulist._id %>" class="ppulist-link">
            <div class="card col">
                <img 
                src="<%= ppulist.image %>" 
                class="card-img-top" 
                alt="ppulist_image"
                styles="height: 20rem"
                />
                <div class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="card-text"> 
                    <b><%= ppulist.title %></b> <br>
                    <%= ppulist.description %> <br>
                    <b>PostedBy :-</b><%= ppulist.postedBy %> <br>
                    <b>Post Data & Time</b><%= ppulist.time %> <br>
                  </p>
                  </div>
              </div>
            </a>
              <% } %>
    </div>